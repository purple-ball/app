/* pages/reward/detail.wxss */
.container {
  padding: 30rpx;
}

.reward-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.reward-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.reward-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 30rpx;
}

.reward-description {
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
  text-align: center;
  margin-bottom: 40rpx;
}

.reward-time {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 30rpx;
  border-top: 2rpx solid var(--border-color);
}

.reward-time .label {
  font-size: 28rpx;
  color: var(--text-color-light);
}

.reward-time .value {
  font-size: 28rpx;
  color: var(--text-color);
}

.share-btn {
  margin-top: 60rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}