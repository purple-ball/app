/* 帖子内容 */
.post-content {
  margin-bottom: 30rpx;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.time {
  font-size: 24rpx;
  color: var(--text-color-light);
}

.category-tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: var(--primary-color);
  background-color: var(--background-color);
}

.post-body {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.content {
  font-size: 30rpx;
  color: var(--text-color);
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.image-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
}

.post-image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
}

.post-footer {
  display: flex;
  justify-content: space-around;
  padding-top: 30rpx;
  border-top: 2rpx solid var(--border-color);
}

.action-item {
  display: flex;
  align-items: center;
  color: var(--text-color-light);
}

.action-item .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.share-btn {
  background: none;
  padding: 0;
  line-height: 1;
  border: none;
  color: var(--text-color-light);
}

.share-btn::after {
  display: none;
}

/* 评论列表 */
.comments {
  margin-bottom: 120rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.comment-item {
  display: flex;
  margin-bottom: 30rpx;
}

.comment-item:last-child {
  margin-bottom: 0;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.comment-header .time {
  margin-left: 20rpx;
}

.text {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 16rpx;
}

.reply-list {
  background: var(--background-color);
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.reply-item {
  margin-bottom: 16rpx;
}

.reply-item:last-child {
  margin-bottom: 0;
}

.reply-item .nickname {
  color: var(--primary-color);
  margin-right: 10rpx;
}

.comment-actions {
  display: flex;
  gap: 30rpx;
}

.action {
  font-size: 24rpx;
  color: var(--text-color-light);
}

.no-comment {
  text-align: center;
  padding: 60rpx 0;
  color: var(--text-color-light);
}

/* 评论输入框 */
.comment-input-wrapper {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.iphonex-bottom {
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.comment-input {
  display: flex;
  align-items: center;
}

.input {
  flex: 1;
  height: 72rpx;
  background: var(--background-color);
  border-radius: 36rpx;
  padding: 0 30rpx;
  margin-right: 20rpx;
}

.send-btn {
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
  background: var(--background-color);
  color: var(--text-color-light);
}

.send-btn.active {
  background: var(--primary-color);
  color: #fff;
} 